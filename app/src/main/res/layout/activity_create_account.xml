<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/add_pro_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/add_profile_image" />

            <EditText
                android:id="@+id/profile_name_input"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/add_pro_image"
                android:layout_marginTop="30dp"
                android:hint="Name"
                android:background="@drawable/edit_text_line_back"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/phone_number_input"
                android:layout_marginTop="5dp"
                android:layout_below="@id/profile_name_input"
                android:hint="Mail or Number"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:background="@drawable/edit_text_line_back"
                android:textAlignment="center"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/pass_input"
                android:layout_marginTop="5dp"
                android:layout_below="@id/phone_number_input"
                android:hint="Password"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_line_back"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/address_input"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/pass_input"
                android:layout_alignParentStart="true"
                android:hint="Address"
                android:background="@drawable/edit_text_line_back"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/create_acc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_input"
                android:background="@color/colorPrimary"
                android:text="Create Account"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:text="Already Have an Account ???"
                android:id="@+id/or_txt"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_acc_button"/>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/or_txt"
                android:background="@color/colorPrimary"
                android:text="Login"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>